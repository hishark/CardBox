<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <EditText
            android:id="@+id/et_addCard_front"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_addcard_front_03"
            android:drawablePadding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#d1cece" />

        <EditText
            android:id="@+id/et_addCard_back"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_addcard_back_03"
            android:drawablePadding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#d1cece" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <Button
                    android:id="@+id/bt_finishOneInput"
                    style="@style/TextAppearance.AppCompat.Button"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="保存"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorWhite"
                    android:backgroundTint="@color/colorPrimary"
                    />
            <Button
                android:id="@+id/bt_clearInput"
                style="@style/TextAppearance.AppCompat.Button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textColor="@color/colorWhite"
                android:text="清空"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>