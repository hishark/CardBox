<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activity.SignUpActivity">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="8dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextInputLayout_signup_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:counterMaxLength="20">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/TextInputEditText_signup_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_username_32_yellow"
                    android:drawableLeft="@drawable/ic_username_32_yellow"
                    android:hint="请输入账号（英文+数字）"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/TextInputLayout_signup_password"
                app:passwordToggleEnabled="true"
                >

                <EditText
                    android:id="@+id/EditText_signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_password_32_yellow"
                    android:drawableStart="@drawable/ic_password_32_yellow"
                    android:hint="请输入密码"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/TextInputLayout_signup_assure_password"
                app:passwordToggleEnabled="true"
                >

                <EditText
                    android:id="@+id/EditText_signup_assure_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_assure_password_32_yellow"
                    android:drawableStart="@drawable/ic_assure_password_32_yellow"
                    android:hint="请确认密码"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/pretend_Button_signup"
                style="@style/TextAppearance.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="注册"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorWhite" />

            <!--<android.support.v7.widget.CardView
                android:elevation="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注 册"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"/>

            </android.support.v7.widget.CardView>-->


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>